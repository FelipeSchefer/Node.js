<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/navigation.ejs') %>
 <h1>Account List</h1>
 <% if(accts.length > 0) { %>
  <div>  
   <% accts.forEach((account) => { %>
   <ul>
    <li>
     <h4>
      Nome: <%= account.accountName %>
     </h4>
    </li>
    <li>
     <p>
      Account number: <%= account.accountNumber %>
     </p>
    </li>
   </ul>
   <div>
    <a href="/admin/add-account<%= account.id %>">Edit</a>
    <form action="/admin/delete-account" method="POST">
     <button type="submit">Delete</button>
    </form>
   </div>
   <hr/>
   <% }) %> 
  </div>
 <% } else { %>
  <h1>Account List not found</h1>
 <% } %> 
<%- include('../includes/end.ejs') %>