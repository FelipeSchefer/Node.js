</head>
<body>
<%- include('../includes/navigation.ejs') %>
 <h1>Account List</h1>
 <% if(accts.length > 0) { %>
  <div>  
   <% accts.forEach((account) => { %>
   <ul>
    <li>
     <h4>
      Name: <%= account.accountName %>
     </h4>
    </li>
    <li>
     <p>
      Account number: <%= account.accountNumber %>
     </p>
    </li>
   </ul>
   <div>
    <a href="/accounts/<%= account.id %>">Details</a>
    <%- include('../includes/add-to-cart.ejs', {account: account}) %>
   </div>
   <hr/>
   <% }) %> 
  </div>
 <% } else { %>
  <h1>Account List not found</h1>
 <% } %> 
<%- include('../includes/end.ejs') %>